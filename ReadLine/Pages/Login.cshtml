@page
@model LoginModel

<h4 class="text-center p-2"> Вход</h4>
<form method="post">
    <div asp-validation-asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl"/>
    <div class="form-group" style="margin-bottom: 40px;">
        <label>Ваше имя</label>
        <input name="UserName" class="form-control" value="@Model.UserName" />
    </div>
    <div class="form-group" style="margin-bottom: 40px;">
        <label>Пароль</label>
        <input name="Password" class="form-control" value="@Model.Password" />
    </div>
    <button type="submit" class="btn btn-primary">Войти</button>
    <a class="btn btn-secondary" href="/Register">Зарегистрироваться</a>
    <a class="btn btn-secondary" href="/Home/Index">На главную</a>
</form>

@functions {
    public class LoginModel : PageModel
    {
        public SignInManager<IdentityUser> SignInManager;
        public LoginModel(SignInManager<IdentityUser> signinManager)
        {
            SignInManager = signinManager;
        }
        [BindProperty][Required]        
        public string UserName { get; set; }
        [BindProperty][Required]        
        public string Password { get; set; }
        [BindProperty(SupportsGet = true)]
        public string ReturnUrl { get; set; }
        public async Task<IActionResult> OnPostAcync()
        {
            if (ModelState.IsValid)
            {
                Microsoft.AspNetCore.Identity.SignInResult result = await SignInManager.PasswordSignInAsync(UserName, Password, false, false);
                if (result.Succeeded)
                    return Redirect(ReturnUrl ?? "/");
                ModelState.AddModelError("", "Неверное имя пользователя или пароль");
            }
            return Page();
        }
    }
}
