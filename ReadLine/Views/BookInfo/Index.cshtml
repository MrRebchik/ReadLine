@model BookViewModel
<div>
    <table>
        <tr>
            <th>Название:</th>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <th>Автор:</th>
            <td>@Model.AuthorSurname @Model.AuthorName</td>
        </tr>
        <tr>
            <th>Категория:</th>
            <td>@Model.Category</td>
        </tr>
        <tr>
            <th>Количество страниц:</th>
            <td>@Model.PagesCount</td>
        </tr>
        <tr>
            <th>Возрастное ограничение:</th>
            <td>@Model.AgeLimit.ToString()</td>
        </tr>
        <tr>
            <th>Год публикации:</th>
            <td>@Model.PublicationYear</td>
        </tr>
        <tr>
            <th>Теги:</th>
            <td>
                @foreach(var t in @Model.Tags)
                {
                    <span class="badge bg-secondary">@t</span>
                }
            </td>
        </tr>
    </table>
</div>